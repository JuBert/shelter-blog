---
import { Button } from '@components/util/Button';

const { platform, username } = Astro.props;
---
<Button text={platform} variant='secondary' to={`https://www.${platform}.com/${username}`} />

<style>
    a {
        padding: 0.5rem 1rem;
        color: white;
        background-color: #4c1d95;
        text-decoration: none;
    }
</style>